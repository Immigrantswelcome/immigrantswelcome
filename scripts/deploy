#!/bin/bash

set -o errexit -o nounset

if [ "$TRAVIS_PULL_REQUEST" != "false" ]
then
    echo "This is a PR and not a commit! No deploy!"
    exit 0
fi

if [ "$TRAVIS_BRANCH" != "development" ]
then
  echo "This commit was made against the $TRAVIS_BRANCH and not the development! No deploy!"
  exit 0
fi

rev=$(git rev-parse --short HEAD)

cd dist

# git

git init
git config user.name "immigrantswelcome-bot"
git config user.email "immigrantswelcome-bot@users.noreply.github.com"

git remote add upstream "https://$GH_TOKEN@github.com/immigrantswelcome/immigrantswelcome.github.io.git"
git fetch upstream
git reset upstream/master

# any other build stuff?

touch .

git add -A .
# lets test this first
echo "commit ${rev}"
echo "push"
#git commit -m "rebuild pages at ${rev}"
#git push -q upstream HEAD:master
